<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hrclubbd.hrclub">

    <application
        android:name="com.hrclubbd.hrclub.UserClient"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UserPanel" android:theme="@style/UserPanel"
            android:screenOrientation="portrait" />

        <activity android:name="com.hrclubbd.hrclub.ui.LoginActivity" />
        <activity android:name="com.hrclubbd.hrclub.ui.MainActivity" />

        <activity android:name="com.hrclubbd.hrclub.ui.RegisterActivity" />
        <activity android:name="com.hrclubbd.hrclub.ui.ChatroomActivity" />
        <activity android:name="com.hrclubbd.hrclub.ui.ProfileActivity" />

    </application>

</manifest>